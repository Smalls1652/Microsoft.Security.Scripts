{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create documentation",
            "detail": "Create documentation files for the scripts.",
            "icon": {
                "id": "file-text",
                "color": "terminal.ansiBlue"
            },
            "type": "process",
            "command": "pwsh",
            "args": [
                "-NoProfile",
                "-NoLogo",
                "-File",
                "${workspaceFolder}/.vscode/scripts/Create-Documentation.ps1",
                "-WorkspacePath",
                "${workspaceFolder}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}
